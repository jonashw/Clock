function Clock(date){
	var seconds = date.getSeconds();
	var secondHand = new SecondHand(date.getSeconds());
	var minuteHand = new MinuteHand(date.getMinutes());
	var hourHand = new HourHand(date.getHours());

	this.getHourHand   = function(){ return   hourHand; };
	this.getMinuteHand = function(){ return minuteHand; };
	this.getSecondHand = function(){ return secondHand; };
}
